    <script>
        $(".btn").click(function () {
            var attr = $(this).attr("data-li");

            $(".btn").removeClass("active");
            $(this).addClass("active");

            $(".item").hide();

            if (attr == "Videos") {
                $("." + attr).show();
            }
            else if (attr == "Cours") {
                $("." + attr).show();
            }
            else if (attr == "Exercices") {
                $("." + attr).show();
            }
            else {
                $(".item").show();
            }
        });
    </script>
