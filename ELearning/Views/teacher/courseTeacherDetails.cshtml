    <div class="container">
        @*============================================================================*@
        <section class="section blog" aria-label="blog">
            <div class="container">
                <div class="wrapper">
                    <div class="button_grp">
                        <ul>
                            <li data-li="all" class="btn active">Touts les fichier(par ordre Temporaire)</li>
                            <li data-li="Videos" class="btn">Enregistrement Videos</li>
                            <li data-li="Cours" class="btn">Cours</li>
                            <li data-li="Exercices" class="btn">Exercices</li>
                        </ul>
                    </div>



                    <div class="item_grp">

                        @foreach (ELearning.VideosTable item in Model.lstVideoTable)
                        {

                            <div class="item  Videos">
                                <a href="/teacher/showVideo?id=@item.IdVideo">
                                    <div class="icon_wrp">
                                        <span><img style="width:50px;height:50px;" src="~/Content/images/video-icon-1.png" /></span>
                                    </div>
                                    <div style="color:darkblue" class="name">Titre : @item.titre</div>
                                    <div style="color:darkblue" class="name">Date de publication : @item.datePublication</div>
                                </a>

                                <button class="btnDelete"><a href="/teacher/deleteVideo?id=@item.IdVideo">Delete</a></button>

                            </div>
                        }


                        @foreach (ELearning.PDF item in Model.lstPdfTable)
                        {
                            <div class="item Cours">
                                <a href="/teacher/showPdf?id=@item.IdPdf">
                                    <div class="icon_wrp">
                                        <span><img style="width:50px;height:50px;" src="~/Content/images/pdf.png" /></span>
                                    </div>
                                    <div style="color:darkblue" class="name">Nom du Fichier : @item.urlPdf</div>
                                    <div style="color:darkblue" class="name">Date de publication : @item.datePublication</div>
                                </a>


                                <button class="btnDelete"><a href="/teacher/deletePdf?id=@item.IdPdf">Delete</a></button>

                            </div>
                        }


                        @foreach (ELearning.Exercice item in Model.lstExoTable)
                        {
                            <div class="item Exercices">
                                <a href="/teacher/showExo?id=@item.IdExercice">
                                    <div class="icon_wrp">
                                        <span><img style="width:50px;height:50px;" src="~/Content/images/pdf.png" /></span>
                                    </div>
                                    <div style="color:darkblue" class="name">Nom du Fichier : @item.urlPdfExo</div>
                                    <div style="color:darkblue" class="name">Date de publication : @item.datePublicationExo</div>
                                </a>

                                <button class="btnDelete"><a href="/teacher/deleteExo?id=@item.IdExercice">Delete</a></button>

                            </div>
                        }



                    </div>


                </div>
            </div>
        </section>
        @*============================================================================*@
